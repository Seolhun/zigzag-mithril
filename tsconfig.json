// Reference : https://www.typescriptlang.org/docs/handbook/compiler-options.html
{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "Es6",
      "Dom",
      "ScriptHost"
    ],
    "compilerOptions": {
      "moduleResolution": "node"
    },
    "baseUrl": "src",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "charset": "UTF8",
    "jsx": "react",
    "jsxFactory": "m",
    "watch": true
  },
  "exclude": [
    "dist",
    "node_modules"
  ]
}
