
{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "sourceMap": true,
        "moduleResolution": "node",
        "baseUrl": "src/",
        "rootDir": "src/",
        "outDir": "dist/",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "removeComments": true,
        "pretty": true,
        "newLine": "LF"
    },
    "exclude": [
        "node_modules"
    ]
}